<%- model_class = Beer -%>
<div id="beers">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:brewery) %></th>

        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.id, beer_path(beer) %></td>
            <td><%= link_to beer.name, beer_path(beer) %></td>
            <td><%= link_to beer.brewery, beer_path(beer) %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_beer_path(beer), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          beer_path(beer),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @beers, :renderer => BootstrapPagination::Rails %>
 </div>