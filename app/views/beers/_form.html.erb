<%= form_for @beer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :alcoholpercentage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :alcoholpercentage, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :kind_id, :class => 'control-label'  %>
    <div class="controls">
      <%= f.select :kind_id, @kinds.map {|kind| [kind.name,kind.id]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                beers_path, :class => 'btn' %>
  </div>
<% end %>
