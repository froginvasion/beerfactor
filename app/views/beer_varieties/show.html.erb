<%- model_class = BeerVariety -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @beer_variety.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kind_id) %>:</strong></dt>
  <dd><%= @beer_variety.kind.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alcohol_percentage) %>:</strong></dt>
  <dd><%= @beer_variety.alcohol_percentage %></dd>
</dl>



<%= link_to 'Edit', edit_beer_beer_variety_path(@beer_variety) %> |
<%= link_to 'Back', beer_path(@beer_variety.beer) %>
