<h3>Sign up!</h3>
<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
          <h3>Form has errors:</h3>
          <ul>
            <% for error in @user.errors.full_messages %>
                <li><%= error %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="form-field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="form-field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="form-field">
      <%= f.label :password_confirm %>
      <%= f.password_field :password_confirm %>
    </div>
    <div class="form-field">
      <%= f.submit nil %>
    </div>


<% end %>